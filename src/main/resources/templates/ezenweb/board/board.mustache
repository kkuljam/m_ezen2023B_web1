{{>ezenweb/header}}
<div class="container">

    <h3> 게시판 </h3>
    <div class="boardTop">
        <div class="boardCategoryBox">
            <button class="button categoryActive" onclick="onBcno(0)" type="button">전체보기</button>
            <button class="button " onclick="onBcno(1)" type="button">자유</button>
            <button class="button "  onclick="onBcno(2)" type="button">노하우</button>
        </div>

        <div>
            <a href="/board/write" class="writeB next">글쓰기</a>
            <div>
                <select class="pageBoardSize" onchange="onPageBoardSize(this)">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
                전체 페이지 수<span class="totalPage"></span>
                전체 게시물 수 <span class="totalBoardSize"></span>
            </div>

            <div><!-- 검색 창 -->
                <select class="key"> <!-- 검색 key-->
                    <option value="b.btitle"> 제목 </option>
                    <option value="b.content"> 내용 </option>
                    <option value="m.id"> 작성자 </option>
                </select>
                <input class="keyword"/>
                <button onclick="onSearch()" type="button">검색</button>
            </div>
        </div>

    </div>

    <!-- 테이블 -->
    <table class="table table-striped table-hover align-middle">
        <thead>
        <tr>
            <th scope="col"  style="width:5%"; >번호</th>
            <th scope="col"  style="width:60%"; >제목</th>
            <th scope="col"  style="width:15%"; >작성자</th>
            <th scope="col"  style="width:15%"; >작성일</th>
            <th scope="col"  style="width:5%"; >조회수</th>
        </tr>
        </thead>
        <tbody id="boardTableBody">
        <!-- JS가 행을 넣어주는 위치 -->
        </tbody>
    </table>

    <!-- 페이지네이션 -->
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" onclick="doViewList(1)">1</a></li>
            <li class="page-item"><a class="page-link" onclick="doViewList(2)">2</a></li>
            <li class="page-item"><a class="page-link" onclick="doViewList(3)">3</a></li>
            <li class="page-item"><a class="page-link" href="#">다음</a></li>
        </ul>
    </nav>
</div>
<script src="/js/board/board.js"></script>
{{>ezenweb/footer}}