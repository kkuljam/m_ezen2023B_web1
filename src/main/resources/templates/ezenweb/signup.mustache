{{>ezenweb/header}}
    <h1>회원가입</h1>
    <form class="signUpForm">
<!--    <div>-->
        <div> 아이디 </div>
            <input onkeyup="idCheck()" type="text" id="id" name="id" />
        <div class="idcheckbox">유효성검사결과</div>

        <div>비밀번호</div>
        <input onkeyup="pwCheck()" type="text" id="pw" name="pw"><br/>
        <div>비밀번호 확인</div>
        <input onkeyup="pwCheck()" type="text" id="pwconfirm" name="pwconfirm"><br/>
        <div class="pwcheckbox">유효성검사결과</div>

        <div>이름</div>
        <input onkeyup="namecheck()" type="text" id="name" name="name"><br/>
        <div class="namecheckbox"></div>

        <div>전화번호</div>
        <input onkeyup="phonecheck()" type="text" id="phone" name="phone"><br/>
        <div class="phonecheckbox"></div>

        <div>이메일</div>
        <input onkeyup="emailcheck()" type="text" id="email" name="email"><br/>
        <div class="emailcheckbox"></div>


        <div>프로필 사진</div>
        <input onchange="onChangeImg(this)" type="file" id="img" name="img" accept="image/*"/><br/>
        <div> <!-- 첨부파일 미리보기-->
            <img id="preimg" src="/img/default.jpg"/>
        </div>
        <a href="/member/login">로그인</a>
        <button type="button" onclick="signup()">회원가입</button>
<!--    </div>-->
    </form>
    <script src="/js/member.js"></script>
    <!--{resources/static}/js/member.js-->
{{>ezenweb/footer}}